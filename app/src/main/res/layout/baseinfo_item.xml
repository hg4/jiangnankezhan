<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="61dp"
    android:orientation="vertical">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/info_key"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="defaultKey"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginLeft="25dp"
            app:layout_constraintLeft_toLeftOf="parent"/>

        <TextView
            android:id="@+id/info_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="defaultValue"
            android:textAlignment="textEnd"
            android:textColor="@color/colorRed"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/info_edit"
            android:layout_marginRight="12dp"
            app:layout_constraintVertical_bias="0.522"/>

        <ImageButton
            android:id="@+id/info_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:background="@null"
            app:srcCompat="@drawable/info_next_icon"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginRight="20dp"
            app:layout_constraintVertical_bias="0.51"
            app:layout_constraintRight_toRightOf="parent"/>

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="368dp"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/uni_div"
          />
    </android.support.constraint.ConstraintLayout>

</LinearLayout>