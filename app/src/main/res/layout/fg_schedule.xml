<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:baselineAligned="false">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="#fff"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <Button
            android:layout_width="14dp"
            android:layout_height="14dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="22dp"
            android:background="@drawable/curri_apps"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="第1周"
            android:textColor="#222D43"
            android:textSize="20sp"
            android:paddingLeft="119dp"
            android:layout_gravity="center"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/curri_unfold_more"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="30dp">
            <Button
                android:layout_width="4dp"
                android:layout_height="4dp" />
            <Button
                android:layout_width="4dp"
                android:layout_height="4dp" />

        </LinearLayout>
        <Button
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_marginLeft="55dp"
            android:layout_gravity="center_vertical"
            android:background="@drawable/curri_search"
            />
        <Button
            android:layout_width="17dp"
            android:layout_height="17dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="28dp"
            android:background="@drawable/curri_add"
            />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <ImageView
            android:layout_width="22dp"
            android:layout_height="match_parent"
            android:background="#AC7281"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#222D43">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:ems="1"
                android:gravity="center"
                android:text="周一"
                android:layout_marginLeft="19dp"
                android:textSize="15dp"
                android:textColor="#fff"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:ems="1"
                android:gravity="center"
                android:text="周二"
                android:layout_marginLeft="30dp"
                android:textSize="15dp"
                android:textColor="#fff"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:ems="1"
                android:gravity="center"
                android:text="周三"
                android:layout_marginLeft="30dp"
                android:textSize="15dp"
                android:textColor="#fff"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:ems="1"
                android:gravity="center"
                android:text="周四"
                android:layout_marginLeft="30dp"
                android:textSize="15dp"
                android:textColor="#fff"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:ems="1"
                android:gravity="center"
                android:text="周五"
                android:layout_marginLeft="30dp"
                android:textSize="15dp"
                android:textColor="#fff"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:ems="1"
                android:gravity="center"
                android:text="周六"
                android:layout_marginLeft="30dp"
                android:textSize="15dp"
                android:textColor="#fff"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:ems="1"
                android:gravity="center"
                android:text="周日"
                android:layout_marginLeft="30dp"
                android:textSize="15dp"
                android:textColor="#fff"/>
        </LinearLayout>

    </LinearLayout>
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ListView
            android:id="@+id/listView"
            android:layout_width="22dp"
            android:layout_height="600dp"
            android:background="#222D43">

        </ListView>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="600dp"
            android:background="#494E6B">


        </RelativeLayout>


    </LinearLayout>
</ScrollView>
</LinearLayout>