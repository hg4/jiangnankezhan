<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="340dp"
    android:layout_height="187dp"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    android:layout_marginTop="10dp"
    android:background="@drawable/rec_1"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/linearLayout"
    android:id="@+id/constraintLayout9">


    <TextView
        android:id="@+id/materialname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="13dp"
        android:text="资料名"
        android:maxEms="13"
        android:maxLines="1"
        android:ellipsize="end"
        android:textColor="#fff"
        android:textSize="20dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/head"
        android:layout_width="34dp"
        android:layout_height="34dp"
        android:layout_marginStart="15dp"
        app:srcCompat="@drawable/def_ava"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="60dp"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/owner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="67dp"
        android:ellipsize="end"
        android:ems="6"
        android:maxLines="2"
        android:text="昵称"
        android:textColor="#747474"
        android:textSize="14sp"
        app:layout_constraintLeft_toRightOf="@+id/head"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/textView24"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="67dp"
        android:text="上传于"
        android:textColor="#AD7382"
        android:textSize="15dp"
        app:layout_constraintTop_toTopOf="@+id/constraintLayout9"
        app:layout_constraintRight_toLeftOf="@+id/imageView14"
        android:layout_marginRight="10dp" />

    <ImageView
        android:layout_width="10dp"
        android:layout_height="10dp"
        app:srcCompat="@drawable/comment_clock"
        app:layout_constraintRight_toLeftOf="@+id/time"
        android:layout_marginRight="6dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="71dp"
        android:id="@+id/imageView14" />
    <TextView
        android:id="@+id/time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="YYYY-MM-DD"
        android:textSize="12dp"
        android:textColor="#616161"
        android:layout_marginRight="20dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="69dp" />

    <TextView
        android:id="@+id/content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:maxEms="20"
        android:maxLines="4"
        android:ellipsize="end"
        android:textSize="12dp"
        android:textColor="#616161"
        android:layout_marginLeft="18dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="9dp"
        app:layout_constraintTop_toBottomOf="@+id/head" />

    <TextView
        android:id="@+id/likenumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:layout_marginLeft="8dp"
        android:text="0"
        android:textColor="#747474"
        android:textSize="12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/like"/>

    <ImageView
        android:id="@+id/like"
        android:layout_width="14dp"
        android:layout_height="12dp"
        android:layout_marginBottom="15dp"
        android:layout_marginLeft="22dp"
        app:layout_constraintBottom_toBottomOf="@+id/constraintLayout9"
        app:layout_constraintLeft_toLeftOf="@+id/constraintLayout9"
        app:srcCompat="@drawable/like_icon" />


</android.support.constraint.ConstraintLayout>
