<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#222D43"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.hg4.jiangnankezhan.EduLoginActivity"
    tools:showIn="@layout/activity_edu_login">

    <Spinner
        android:id="@+id/year_spinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="18dp"
        android:background="@drawable/jwsystem_tri_long"
        android:entries="@array/school_year_labels"
        app:layout_constraintLeft_toLeftOf="@+id/textView16"
        app:layout_constraintTop_toBottomOf="@+id/textView16"/>

    <Button
        android:id="@+id/edulogin_login"
        android:layout_width="261dp"
        android:layout_height="54dp"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginTop="391dp"
        android:background="@drawable/jwsystem_button"
        android:textColor="@color/colorRed"
        android:textSize="20sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <EditText
        android:id="@+id/edulogin_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="178dp"
        android:background="@drawable/jwsystem_rec"
        android:ems="10"
        android:textColorHint="#c1c1c1"
        android:paddingLeft="24dp"
        android:hint="学号"
        android:inputType="textPersonName"
        app:layout_constraintLeft_toLeftOf="@+id/year_spinner"
        app:layout_constraintTop_toTopOf="parent"
        />

    <EditText
        android:id="@+id/edulogin_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:background="@drawable/jwsystem_rec"
        android:ems="10"
        android:hint="教务处密码"
        android:inputType="textPassword"
        android:paddingLeft="24dp"
        android:textColorHint="#c1c1c1"
        app:layout_constraintLeft_toLeftOf="@+id/edulogin_username"
        app:layout_constraintRight_toRightOf="@+id/edulogin_username"
        app:layout_constraintTop_toBottomOf="@+id/edulogin_username"/>

    <EditText
        android:id="@+id/edulogin_codeinput"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="验证码"
        android:paddingLeft="24dp"
        android:background="@drawable/jwsystem_short"
        android:textColorHint="#c1c1c1"
        android:layout_marginTop="20dp"
        android:ems="4"
        android:inputType="textPersonName"
        app:layout_constraintLeft_toLeftOf="@+id/edulogin_password"
        app:layout_constraintTop_toBottomOf="@+id/edulogin_password"/>

    <ImageView
        android:id="@+id/edulogin_code"
        android:layout_width="70dp"
        android:layout_height="30dp"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:background="#ffffff"
        app:layout_constraintBottom_toBottomOf="@+id/edulogin_codeinput"
        app:layout_constraintLeft_toRightOf="@+id/edulogin_codeinput"
        app:layout_constraintTop_toTopOf="@+id/edulogin_codeinput"
        app:layout_constraintVertical_bias="0.333"/>

    <Button
        android:id="@+id/edulogin_refresh"
        android:layout_width="26dp"
        android:layout_height="28dp"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:background="@null"
        android:lineSpacingExtra="8sp"
        android:text="看不清换一张"
        android:textColor="#fff"
        android:textSize="8sp"
        app:layout_constraintBottom_toBottomOf="@+id/edulogin_code"
        app:layout_constraintLeft_toRightOf="@+id/edulogin_code"
        app:layout_constraintTop_toTopOf="@+id/edulogin_code"
        app:layout_constraintVertical_bias="0.666"
        tools:layout_editor_absoluteY="285dp"/>

    <Spinner
        android:id="@+id/term_spinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="0dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="0dp"
        android:background="@drawable/jwsystem_tri_short"
        android:entries="@array/term_labels"
        app:layout_constraintBottom_toBottomOf="@+id/year_spinner"
        app:layout_constraintLeft_toRightOf="@+id/textView11"
        app:layout_constraintTop_toTopOf="@+id/year_spinner"
        app:layout_constraintVertical_bias="0.0"/>

    <TextView
        android:id="@+id/textView11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="学年"
        android:textColor="#fff"
        android:textSize="20sp"
        app:layout_constraintLeft_toRightOf="@+id/year_spinner"
        android:layout_marginLeft="16dp"
        app:layout_constraintTop_toTopOf="@+id/year_spinner"
        android:layout_marginTop="0dp"
        app:layout_constraintBottom_toBottomOf="@+id/year_spinner"
        android:layout_marginBottom="0dp"
        app:layout_constraintVertical_bias="0.4"/>

    <TextView
        android:id="@+id/textView15"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="学期"
        android:textColor="#fff"
        android:textSize="20sp"
        app:layout_constraintLeft_toRightOf="@+id/term_spinner"
        android:layout_marginLeft="16dp"
        app:layout_constraintTop_toTopOf="@+id/term_spinner"
        android:layout_marginTop="0dp"
        app:layout_constraintBottom_toBottomOf="@+id/term_spinner"
        android:layout_marginBottom="0dp"
        app:layout_constraintVertical_bias="0.4"/>

    <TextView
        android:id="@+id/textView16"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="85dp"
        android:text="选择导入的课表年份"
        android:textColor="#ffffff"
        android:textSize="22sp"
        app:layout_constraintLeft_toLeftOf="@+id/edulogin_login"
        app:layout_constraintTop_toTopOf="parent"/>

</android.support.constraint.ConstraintLayout>
