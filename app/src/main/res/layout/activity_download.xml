<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.hg4.jiangnankezhan.DownloadActivity">
    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="0dp"
        android:layout_height="55dp"
        android:background="#fff"
        android:elevation="3dp"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="22dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/default_back_icon"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="36dp"
            android:layout_gravity="center_vertical"
            android:text="资料下载"
            android:textColor="#222D43"
            android:textSize="22dp" />

        <Button
            android:layout_width="4dp"
            android:layout_height="17dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="150dp"
            android:background="@drawable/threedots_icon" />

    </LinearLayout>

    <android.support.constraint.ConstraintLayout
        android:layout_width="340dp"
        android:layout_height="200dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/rec_1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout"
        android:id="@+id/constraintLayout9"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp">


        <TextView
            android:id="@+id/coinnumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="0dp"
            android:layout_marginLeft="6dp"
            android:layout_marginTop="0dp"
            android:text="0积分"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="@+id/coin"
            app:layout_constraintLeft_toRightOf="@+id/coin"
            app:layout_constraintTop_toTopOf="@+id/coin"/>

        <ImageView
            android:id="@+id/coin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="0dp"
            android:layout_marginLeft="130dp"
            android:layout_marginTop="0dp"
            app:layout_constraintBottom_toBottomOf="@+id/downloadnumber"
            app:layout_constraintLeft_toRightOf="@+id/downloadnumber"
            app:layout_constraintTop_toTopOf="@+id/downloadnumber"
            app:srcCompat="@drawable/coin"
            app:layout_constraintVertical_bias="1.0"/>

        <TextView
            android:id="@+id/downloadnumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="0dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="0dp"
            android:text="0"
            android:textColor="#747474"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="@+id/down"
            app:layout_constraintLeft_toRightOf="@+id/down"
            app:layout_constraintTop_toTopOf="@+id/down"/>

        <ImageView
            android:id="@+id/down"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="0dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="0dp"
            app:layout_constraintBottom_toBottomOf="@+id/commentnumber"
            app:layout_constraintLeft_toRightOf="@+id/commentnumber"
            app:layout_constraintTop_toTopOf="@+id/commentnumber"
            app:srcCompat="@drawable/download"/>

        <TextView
            android:id="@+id/materialname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="资料名"
            android:maxEms="13"
            android:maxLines="1"
            android:ellipsize="end"
            android:textColor="#fff"
            android:textSize="22dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="14dp"
            android:layout_marginStart="10dp" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/head"
            android:layout_width="34dp"
            android:layout_height="34dp"
            android:layout_marginStart="15dp"
            app:srcCompat="@drawable/def_ava"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="60dp"
            android:layout_marginLeft="15dp"
            app:layout_constraintLeft_toLeftOf="parent" />

        <TextView
            android:id="@+id/owner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="58dp"
            android:ellipsize="end"
            android:ems="6"
            android:maxLines="2"
            android:text="匿名用户"
            android:textColor="#747474"
            android:textSize="14sp"
            app:layout_constraintLeft_toRightOf="@+id/head"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:id="@+id/textView24"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="上传于"
            android:textColor="#AD7382"
            android:textSize="15dp"
            app:layout_constraintRight_toLeftOf="@+id/imageView14"
            android:layout_marginRight="10dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="58dp"
            android:layout_marginEnd="10dp" />

        <ImageView
            android:layout_width="10dp"
            android:layout_height="10dp"
            app:srcCompat="@drawable/comment_clock"
            app:layout_constraintRight_toLeftOf="@+id/date"
            android:layout_marginRight="6dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="64dp"
            android:id="@+id/imageView14"
            android:layout_marginEnd="6dp" />

        <TextView
            android:id="@+id/date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="YYYY-MM-DD"
            android:textSize="12dp"
            android:textColor="#616161"
            android:layout_marginRight="20dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="60dp"
            android:layout_marginEnd="20dp" />

        <TextView
            android:id="@+id/content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="这位客官默默上传了资料，什么也没说。"
            android:maxEms="19"
            android:maxLines="3"
            android:ellipsize="end"
            android:textSize="14dp"
            android:textColor="#616161"
            android:layout_marginLeft="18dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="9dp"
            app:layout_constraintTop_toBottomOf="@+id/head"
            android:layout_marginStart="18dp" />

        <TextView
            android:id="@+id/likenumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:text="0"
            android:textColor="#747474"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="@+id/like"
            app:layout_constraintLeft_toRightOf="@+id/like"
            app:layout_constraintTop_toTopOf="@+id/like"/>

        <ImageView
            android:id="@+id/comment"
            android:layout_width="13dp"
            android:layout_height="13dp"
            android:layout_marginLeft="22dp"
            android:layout_marginStart="22dp"
            app:layout_constraintBottom_toBottomOf="@+id/likenumber"
            app:layout_constraintLeft_toRightOf="@+id/likenumber"
            app:layout_constraintTop_toTopOf="@+id/likenumber"
            app:srcCompat="@drawable/comment_comment"/>

        <TextView
            android:id="@+id/commentnumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:text="0"
            android:textColor="#747474"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="@+id/comment"
            app:layout_constraintLeft_toRightOf="@+id/comment"
            app:layout_constraintTop_toTopOf="@+id/comment"/>

        <ImageView
            android:id="@+id/like"
            android:layout_width="13dp"
            android:layout_height="13dp"
            android:layout_marginBottom="15dp"
            android:layout_marginLeft="22dp"
            android:layout_marginStart="22dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:srcCompat="@drawable/like_icon"/>


    </android.support.constraint.ConstraintLayout>

    <LinearLayout
        android:id="@+id/materielcomment"
        android:layout_width="336dp"
        android:layout_height="227dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@+id/download"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/constraintLayout9">

    </LinearLayout>

    <Button
        android:id="@+id/download"
        android:layout_width="340dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:background="@drawable/button1"
        android:text="立即下载"
        android:textColor="#fff"
        android:textSize="17dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />


</android.support.constraint.ConstraintLayout>
