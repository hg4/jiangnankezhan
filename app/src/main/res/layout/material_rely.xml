<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#F4F4F4">
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/head"
            android:layout_width="34dp"
            android:layout_height="34dp"
            android:layout_marginStart="45dp"
            android:layout_marginLeft="45dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="3dp" />

        <TextView
            android:id="@+id/content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="6dp"
            android:maxEms="14"
            android:text="哈哈哈哈嘎嘎嘎嘎嘎嘎嘎嘎嘎啊帅哥哥存储过程gggg"
            android:textColor="#BDBDBD"
            android:textSize="14sp"
            app:layout_constraintLeft_toRightOf="@+id/head"
            app:layout_constraintTop_toTopOf="parent"/>

        <ImageView
            android:layout_width="10dp"
            android:layout_height="10dp"
            app:srcCompat="@drawable/comment_clock"
            android:id="@+id/imageView20"
            app:layout_constraintLeft_toLeftOf="@+id/content"
            android:layout_marginTop="6dp"
            app:layout_constraintTop_toBottomOf="@+id/imagelist"
            android:layout_marginLeft="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="4dp"/>
        <TextView
            android:id="@+id/time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="YYYY-MM-DD"
            android:textColor="#222D43"
            android:textSize="12sp"
            android:layout_marginStart="8dp"
            app:layout_constraintLeft_toRightOf="@+id/imageView20"
            app:layout_constraintTop_toTopOf="@+id/imageView20"
            android:layout_marginTop="0dp"
            app:layout_constraintBottom_toBottomOf="@+id/imageView20"
            android:layout_marginBottom="0dp"/>

        <TextView
            android:id="@+id/reply"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="18dp"
            android:text="回复"
            android:textColor="#AC7281"
            app:layout_constraintLeft_toRightOf="@+id/time"
            app:layout_constraintTop_toTopOf="@+id/time"
            android:layout_marginTop="0dp"
            app:layout_constraintBottom_toBottomOf="@+id/time"
            android:layout_marginBottom="0dp"/>

        <LinearLayout
            android:id="@+id/imagelist"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintLeft_toLeftOf="@+id/content"
            app:layout_constraintTop_toBottomOf="@+id/content"
            android:layout_marginRight="0dp"
            app:layout_constraintRight_toRightOf="@+id/content">

        </LinearLayout>


    </android.support.constraint.ConstraintLayout>


</LinearLayout>