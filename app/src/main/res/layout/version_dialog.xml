<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="294dp"
    android:layout_height="wrap_content"
    android:background="@color/white"
    >
<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="发现新版本"
    android:textColor="#222D43"
    android:textSize="25sp"
    android:layout_marginLeft="8dp"
    app:layout_constraintLeft_toLeftOf="parent"
    android:layout_marginRight="8dp"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    android:layout_marginTop="29dp"
    android:id="@+id/textView37" />
    <ImageView
        android:layout_width="234dp"
        android:layout_height="1dp"
        android:background="#232D43"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="6dp"
        app:layout_constraintTop_toBottomOf="@+id/textView37"
        android:id="@+id/imageView21" />



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:text="当前版本"
        android:textColor="#AEAEAE"
        android:textSize="12sp"
        android:id="@+id/currentver"
        android:layout_marginTop="11dp"
        app:layout_constraintTop_toBottomOf="@+id/imageView21"
        android:layout_marginLeft="0dp"
        app:layout_constraintLeft_toLeftOf="@+id/textView37" />

    <TextView
        android:id="@+id/newver"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:text="最新版本"
        android:textSize="12sp"
        android:textColor="#AC7281"
        app:layout_constraintLeft_toLeftOf="@+id/currentver"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toBottomOf="@+id/currentver" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:textColor="#232D43"
        android:text="版本更新"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/newver"
        android:layout_marginLeft="31dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:id="@+id/textView38" />


    <LinearLayout
        android:id="@+id/lin"
        android:layout_width="0dp"
        android:layout_height="54dp"
        app:layout_constraintTop_toBottomOf="@+id/vercontent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="8dp">

        <Button
            android:id="@+id/cancel"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#Ac7281"
            android:text="稍后再说"
            android:textColor="#80ffffff"
            android:textSize="17sp" />

        <Button
            android:id="@+id/sure"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#Ac7281"
            android:text="立即更新"
            android:textColor="#fff"
            android:textSize="17sp" />
    </LinearLayout>

    <ListView
        android:id="@+id/vercontent"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="31dp"
        android:divider="#00000000"
        android:dividerHeight="5dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="6dp"
        app:layout_constraintTop_toBottomOf="@+id/textView38" />


</android.support.constraint.ConstraintLayout>